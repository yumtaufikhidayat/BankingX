<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    app:cardPreventCornerOverlap="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardWallet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_1">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvWalletName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="16dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/grey"
            android:text="@string/txt_main_wallet"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvWalletBalance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/txt_wallet_balance"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/tvWalletName"
            app:layout_constraintStart_toStartOf="@id/tvWalletName"
            app:layout_constraintEnd_toEndOf="@id/tvWalletName"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvWalletNumber"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/txt_wallet_number"
            android:textColor="@color/yellow_100"
            app:layout_constraintTop_toBottomOf="@id/tvWalletBalance"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvWalletName"
            app:layout_constraintEnd_toEndOf="@id/tvWalletName"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgWalletLogo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/logo_card_1"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@id/tvWalletNumber"
            app:layout_constraintBottom_toBottomOf="@id/tvWalletNumber"
            app:layout_constraintEnd_toEndOf="@id/tvWalletName"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>